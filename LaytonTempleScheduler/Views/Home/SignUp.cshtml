@{
    ViewData["Title"] = "Sign Up";
}
@model TimeSlot

<p class="font-weight-bold text-center"> Select a Date</p>

@*<input type="hidden" name="timeslotID" value="@Model.TimeSlotID" />*@

<form class ="text-center" asp-controller="Home" asp-action="SignUp" method="post">
    <input value="@ViewBag.selectedDate" type="date" name="selectedDate"/>
</form>

<br />

<!--Supposed to print the appointment times-->
<div class="form-group">
    @foreach (var timeSlot in ViewBag.timeSlots)
    {
        @if (timeSlot.Available)
        {
            <form method="get" asp-controller="Home" asp-action="Appointment">
                <button type="submit" class="form-control btn btn-primary mb-2">@timeSlot.Start.ToString("h:mm tt")</button> <br />
                <input type="hidden" name="startDate" value="@timeSlot.Start" />
            </form>
        }
        else
        {
            <button type="button" class="form-control btn btn-secondary mb-2" disabled>@timeSlot.Start.ToString("h:mm tt")</button> <br />
        }
    }
</div>

@*<input type="hidden" value="@ViewBag.timeSlots.TimeSlotID" />*@